<ModelViewer local-class="model-viewer" as |mv|>
  <mv.LoadModel @rootUrl="/boxes/" @fileName="box1.glb" as |assetContainer|>
    <mv.Entity
      @assetContainer={{assetContainer}}
      @color={{this.configuration.color.hex}}
      @mergeMeshes={{true}}
      @showNormals={{false}}
      as |mesh|>
      <mv.DefaultCamera @arcRotateCamera={{true}} @panDisabled={{true}} @replace={{true}}/>

      <mv.Light @type="hemi" @direction="0 1 0" @intensity={{0.5}}/>
      <mv.Light @type="point" @position="-0.5 -0.5 -0.5" @intensity={{1}}/>
      <mv.Light @type="directional" @direction="-0.25 -1 0.5" @intensity={{1}} as |light|>
        <mv.ShadowGenerator @light={{light}} @meshes={{array mesh}} @size={{512}}/>
      </mv.Light>

      <mv.Mirror @mesh={{mesh}} @radius={{4}} @size={{512}}/>
    </mv.Entity>
  </mv.LoadModel>
</ModelViewer>